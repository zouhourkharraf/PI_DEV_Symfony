{% extends 'FrontOfficeVisiteur.html.twig' %}

{% block body%}

    <section class="section bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="heading text-center pb-5">
                        <h1 class="font-weight-bold">&#x1F506; Magic Book Events &#x1F506;</h1>
                    </div>
                </div>
                {% for i in tabEvenements %}
                <div class="col-lg-4 col-md-6">
                    <div class="package-content bg-light border text-center p-5 my-2 my-lg-0">
                        <div class="package-content-heading border-bottom">

                        </div>
                        <ul>

                            <li class="my-4"> <h2>{{ i.getNomEv() }}</h2></li>
                            <li class="my-4"> Date Debut : {{ i.getDatedEv() |date('d-m-Y') }}</li>
                            <li class="my-4"> Date Fin : {{ i.getDatefEv()|date('d-m-Y') }}</li>
                            <li class="my-4"> Lieu : {{ i.getLieuEv() }}</li>
                            <li class="my-4"> <img style="width:200px;" src="{{asset ('uploads/evenements/'~i.getImageEv())}}" ></li>

                        </ul>


                        <a href="{{ path('getid',{'id':i.id}) }}" class="btn btn-primary">Afficher d√©tails</a>

                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>




{% endblock %}