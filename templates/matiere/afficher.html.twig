{% extends 'FrontOfficeConnecte.html.twig' %}

{% block body %}
	<div class="container mt-5">
		<h1 class="text-center">Bienvenue</h1>

		<h4 class="text-center">Cliquez sur la matière pour voir le cours</h4>
		<!-- Filter input -->
		<div class="form-group">
			<input type="text" class="form-control" id="filterInput" placeholder="Search">
		</div>
		<div class="row mt-4">
			<div class="col-md-8 offset-md-2">
				<table class="table table-bordered" id="dataTable">
					<thead class="thead-light">
						<tr>
							<th>Nom de la Matière</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for a in matiere %}
							<tr>
								<td>
<a href="{{ path('cour_list', {'id': a.id}) }}" class="matiere-link" data-toggle="tooltip" data-placement="top" title="Voir details">
<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hand-index-fill" viewbox="0 0 16 16">
											<path d="M8.5 4.466V1.75a1.75 1.75 0 1 0-3.5 0v5.34l-1.2.24a1.5 1.5 0 0 0-1.196 1.636l.345 3.106a2.5 2.5 0 0 0 .405 1.11l1.433 2.15A1.5 1.5 0 0 0 6.035 16h6.385a1.5 1.5 0 0 0 1.302-.756l1.395-2.441a3.5 3.5 0 0 0 .444-1.389l.271-2.715a2 2 0 0 0-1.99-2.199h-.581a5.114 5.114 0 0 0-.195-.248c-.191-.229-.51-.568-.88-.716-.364-.146-.846-.132-1.158-.108l-.132.012a1.26 1.26 0 0 0-.56-.642 2.632 2.632 0 0 0-.738-.288c-.31-.062-.739-.058-1.05-.046l-.048.002z"/>
										</svg>
										{{ a.getNomMat }}</a>
								</td>
								<td>
									<div class="btn-group" role="group">
										<a href="{{ path('app_update', {'id': a.id}) }}" class="btn btn-sm btn-primary">
											<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
												<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
												<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
											</svg>
											Modifier
										</a>
										<a href="{{ path('app_remove', {'id': a.id}) }}" class="btn btn-sm btn-danger">
											<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewbox="0 0 16 16">
												<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
												<path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
											</svg>
											Supprimer
										</a>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="2" class="text-center">Aucune matière disponible.</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

		<div class="text-center mt-4">
			<a href="{{ path('AjouterMatiere1') }}" class="btn btn-primary">
				<i class="fas fa-plus"></i>
				Ajouter une matière
			</a>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function () { // Handle filter input changes
$('#filterInput').on('keyup', function () {
var searchText = $(this).val().toLowerCase();

// Loop through table rows and hide those that don't match the search text
$('#dataTable tbody tr').each(function () {
var rowData = $(this).text().toLowerCase();

if (rowData.indexOf(searchText) === -1) {
$(this).hide();
} else {
$(this).show();
}
});
});
});
	</script>
{% endblock %}
