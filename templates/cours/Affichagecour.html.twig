		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script>
			$(document).ready(function () { // Handle filter input changes
$('#filterInput').on('keyup', function () {
var searchText = $(this).val().toLowerCase();

// Loop through table rows and hide those that don't match the search text in the first column
$('#dataTable tbody tr').each(function () {
var rowData = $(this).find('td:eq(0)').text().toLowerCase(); // Assuming name is in the first column

if (rowData.indexOf(searchText) === -1) {
$(this).hide();
} else {
$(this).show();
}
});
});

$(document).ready(function () { // Handle sorting by title when the button is clicked
$('#sortByTitle').on('click', function () {
var table = $('.table');
var rows = table.find('tbody tr').get();

rows.sort(function (a, b) {
var titleA = $(a).find('td:eq(0)').text().toLowerCase();
var titleB = $(b).find('td:eq(0)').text().toLowerCase();

return titleA.localeCompare(titleB);
});

$.each(rows, function (index, row) {
table.children('tbody').append(row);
});
});
});
});

