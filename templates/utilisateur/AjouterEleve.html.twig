	</head>

	<body class="body-wrapper">


		<header style="background-color:rgb(247, 239, 14)">
			<div class="row justify-content-center">
				<a class="navbar-brand" href="{{ path('page_acceuil') }}">
					<img src="{{ asset('images/logo.png') }}" alt="">
				</a>
			</div>
		</header>

		<section class="login py-5 border-top-1">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-5 col-md-8 align-item-center">
						<div class="border border">
							<h3 class="bg-gray p-4" style="background-color:rgb(70, 221, 227)" style="text-align: center;">Créer un compte élève</h3>

							{{ form_start(form_ajout_eleve, {'attr': {'novalidate': 'novalidate','class':'form-horizontal'}}) }}
							{# désactiver la validation du formulaire coté client #}
							<fieldset
								class="p-4">
								{# Le nom #}
								<div>

									{{ form_label(form_ajout_eleve.nom_util,"Nom : ") }}
									{{ form_errors(form_ajout_eleve.nom_util) }}
									{{ form_widget(form_ajout_eleve.nom_util,{'attr': {'class': 'form-control'}}) }}

								</div>
								{# Le prénom #}
								<div>
									{{ form_label(form_ajout_eleve.prenom_util,"Prénom : ") }}
									{{ form_errors(form_ajout_eleve.prenom_util) }}
									{{ form_widget(form_ajout_eleve.prenom_util,{'attr': {'class': 'form-control'}}) }}
									{{ form_help(form_ajout_eleve.prenom_util) }}
								</div>
								<br>
								{# L'age #}
								{{ form_label(form_ajout_eleve.age_util,"Age : ") }}
								{{ form_errors(form_ajout_eleve.age_util) }}
								{{ form_widget(form_ajout_eleve.age_util,{'attr': {'class': 'form-control'}}) }}
								<br>
								{# Le genre #}
								{{ form_label(form_ajout_eleve.genre_util,"Genre : ") }}
								{{ form_errors(form_ajout_eleve.genre_util) }}
								{{ form_widget(form_ajout_eleve.genre_util,{'attr': {'class': 'form-control'}}) }}
								<br>
								{# L'email #}
								{{ form_label(form_ajout_eleve.email_util,"Email : ") }}
								{{ form_errors(form_ajout_eleve.email_util) }}
								{{ form_widget(form_ajout_eleve.email_util,{'attr': {'class': 'form-control'}}) }}
								{{ form_help(form_ajout_eleve.email_util) }}
								<br>
								{# le mp  #}
								{{ form_label(form_ajout_eleve.mot_de_passe_util,"Mot de passe : ") }}
								{{ form_errors(form_ajout_eleve.mot_de_passe_util) }}
								{{ form_widget(form_ajout_eleve.mot_de_passe_util,{'attr': {'class': 'form-control'}}) }}
								<br>
								{# confirmation du mp  #}
								{{ form_label(form_ajout_eleve.confirmation_mp,"Confirmation : ") }}
								{{ form_errors(form_ajout_eleve.confirmation_mp) }}
								{{ form_widget(form_ajout_eleve.confirmation_mp,{'attr': {'class': 'form-control'}}) }}
								{{ form_help(form_ajout_eleve.confirmation_mp) }}
								<br>
								<br>
								{# Bouton Valider et Bouton Annuler  #}
								<div class="row">
									<div class="col">
										{{ form_row(form_ajout_eleve.Valider,{'attr': {'class': 'btn btn-primary font-weight-bold mt-3'}}) }}</div>

									<div class="col">
										{{ form_row(form_ajout_eleve.Annuler,{'attr': {'class': 'btn btn-primary font-weight-bold mt-3'}}) }}</div>
								</div>
							</fieldset>
							{{ form_end(form_ajout_eleve) }}
						</div>
					</div>
				</div>
			</div>

		</section>

