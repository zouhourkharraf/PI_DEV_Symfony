 {% extends 'BackOffice.html.twig' %}
 {% block contenu %}

 <div class="form-group">

                        <div style="position: absolute; top: 50px; left: 600px;width: 1000px; height: 300px;">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Ajouter une nouvelle activité</h3></div>
                                    <div class="card-body">
                                        <form method="POST" action="{{ path('app_addactivite') }}">
                                        {{ form_start(formActivite) }}

                                            
                                            <div class="row mb-3">
                                                <div class="col-md-6">

                                        

                                                    <div class="form-floating mb-3 mb-md-0">
                                                       <!-- <input  class="form-control" id="" type="text" placeholder="enter activity" />-->
                                                       
                                                        {{ form_widget(formActivite.nomact, { 'attr': {'class': 'form-control'} }) }}
                                                            <label for="inputactivitenom" >Nom de l'activité</label>

                                                            
                                                            
                                                            
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating">
                                                        <!--<input class="form-control" id="inputDate" type="text" placeholder="Enter date" />-->
                                                        {{ form_widget(formActivite.dateact, { 'attr': {'class': 'form-control'} }) }}

                                                        
                                                        <label for="inputLastName">Date de l'activité </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                       <!-- <input class="form-control" id="inputPassword" type="password" placeholder="Create a password" />-->
                                                       {{ form_widget(formActivite.nbparticipants, { 'attr': {'class': 'form-control'} }) }}

                                                        
                                                        <label for="inputPassword">Nombre de participants</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                       <!-- <input class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirm password" />-->
                                                       {{ form_widget(formActivite.positionact, { 'attr': {'class': 'form-control'} }) }}
                                                        
                                                        <label for="inputPasswordConfirm">Position</label>
                                                    </div>
                                                </div>
                                            </div>
                                        
                                            <div class="form-floating mb-3">
                                                <!--<input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />-->
                                                {{ form_widget(formActivite.type, { 'attr': {'class': 'form-control'} }) }}
                                                
                                                <label>Type de l'activité </label>
                                            </div>
                                            
                                            


                                            <!--<div class="mt-4 mb-0">
                                                <div class="d-grid"><button type="submit" class="btn btn-primary btn-block" >Confirmer</button></div>-->

                                                 
                                               
                                               
    
                                                
                                            </div>
                                            
                                            <div class="d-grid">{{ form_widget(formActivite.confirm) }}</div>
                                            
                                            
                                          {{ form_end(formActivite) }}
                                        </form>
                                    </div>
                                    <br>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="{{ path('app_showactivite') }}">cancel</a></div>
                                    </div>

                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    {% endblock %}

                {% block js %}

    <script src="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js') }}" crossorigin="anonymous"></script>
        <script src="{{ asset('js_back/scripts.js') }}"></script>
        <script src="{{ asset('https://cdn.jsdelivr.net/npm/simple-datatables@latest') }}" crossorigin="anonymous"></script>
        <script src="{{ asset('js_back/datatables-simple-demo.js') }}"></script>
                
                {% endblock %}