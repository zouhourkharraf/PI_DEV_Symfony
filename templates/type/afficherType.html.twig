{% extends 'BackOffice.html.twig' %}
{% block contenu %}


	<div class="container-fluid px-4">
		<h1 class="mt-4">Les types des activités</h1>
		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item">
				<a href="{{ path('app_addtype') }}">Ajouter un type d'activité</a>
			</li>
			<li class="breadcrumb-item">
				<a href="{{ path('app_showactivite') }}">Retour à la liste des activités</a>
			</li>

		</ol>
		<div class="card mb-4">
			<div class="card-body">
				Cette page contient la liste des types des activités et leurs descriptions
			</div>
		</div>
		<div class="card mb-4">
			<div class="card-header">
				<i class="fas fa-table me-1"></i>
				La liste des types
			</div>
			<div class="card-body">
				<table id="datatablesSimple" style="min-width: 1100px;">
					<thead>
						<tr>
							<th>Identifiant</th>
							<th>Nom type</th>
							<th>Description</th>
							<th>Modifier
							</th>
							<th>Supprimer
							</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th>Identifiant</th>
							<th>Nom type</th>
							<th>Description</th>
							<th>Modifier
							</th>
							<th>Supprimer
							</th>
						</tr>
					</tfoot>
					<tbody>
						{% for i in tabType %}

							<tr>
								<td style="vertical-align: top;">{{ i.id }}</td>
								<td style="vertical-align: top;">{{ i.nomtype }}</td>
								<td style="vertical-align: top;">{{ i.descriptiontype }}</td>
								<td style="vertical-align: top;">
									<a href="{{ path('app_updatetype',{'id':i.id}) }}">
										Update
									</a>
								</td>
								<td style="vertical-align: top;">
									<a href="{{ path('app_removetype',{'id':i.id}) }}">Supprimer</a>
								</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</main></div></div>{% endblock %}{% block js %}<script src="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js') }}" crossorigin="anonymous"></script><script src="{{ asset('js_back/scripts.js') }}"></script><script src="{{ asset('https://cdn.jsdelivr.net/npm/simple-datatables@latest') }}" crossorigin="anonymous"></script><script src="{{ asset('js_back/datatables-simple-demo.js') }}"></script>{% endblock %}
